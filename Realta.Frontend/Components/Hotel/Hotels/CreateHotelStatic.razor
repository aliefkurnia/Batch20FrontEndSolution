<!-- Create Hotel -->
<div class="modal fade" id="createhotel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="createhotelLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createhotelLabel">Create Hotel</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       <div class="card-style mb-30">
                  <div class="input-style-1">
                    <label>Hotel Name</label>
                    <input type="text" placeholder="Full Name">
                  </div>

           <div class="input-style-2">
               <label>Phone Number</label>
               <input type="tel" placeholder="Phone Number" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}">
           </div>

           <div class="select-style-1">
                    <label>Status</label>
                    <div class="select-position">
                      <select>
                        <option hidden>Choose status hotel</option>
                        <option value="">Active</option>
                        <option value="">Disactive</option>
                      </select>
                    </div>
                  </div>                  <!-- end input -->

                  <div class="input-style-3">
                    <label>City</label>
                    <input type="text" placeholder="City">
                    <span class="icon mt-30"><i class="lni lni-search-alt"></i></span>
                  </div>

                  <div class="input-style-1">
                    <label>Address</label>
                    <textarea placeholder="Address" rows="3"></textarea>
                  </div>
                  
                  
                  <div class="input-style-1">
                    <label>Hotel Description</label>
                    <textarea placeholder="Hotel Description" rows="3"></textarea>
                  </div>
                  <!-- end input -->
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Create</button>
      </div>
    </div>
  </div>
</div>
