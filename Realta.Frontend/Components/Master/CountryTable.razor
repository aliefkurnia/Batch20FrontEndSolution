@if (Country.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th class="min-width">
                <h6>ID</h6>
            </th>
            <th class="min-width">
                <h6>Country Name</h6>
            </th>
            <th>
                <h6>Action</h6>
            </th>
        </tr>
        <!-- end table row-->
        </thead>
        <tbody>
        @foreach (var country in Country)
        {
            <tr>
                <td>
                    <div class="lead">
                        <div class="check-input-primary">
                            <input class="form-check-input" type="radio" name="flexRadioCountry" id="flexRadioDefault1"
                                   value="@country.CountryId" @onclick="() => SelectCountry(country.CountryId)">
                        </div>
                        <div class="lead-text ml-10">
                            <p>@country.CountryId</p>
                        </div>
                    </div>
                </td>
                <td>
                    <p>@country.CountryName</p>
                </td>

                <td>
                    <button class="more-btn ml-10 dropdown-toggle" title="More" id="moreAction" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="mdi mdi-dots-vertical"></span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="moreAction">
                        <li class="dropdown-item">
                            <a class="text-gray" @onclick="() => RedirectToUpdate(country.CountryId)">Edit</a>
                        </li>
                        <li class="dropdown-item">
                            <a class="text-danger" @onclick="() => Delete(country.CountryId)">Delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        }
        </tbody>
    </table>
}