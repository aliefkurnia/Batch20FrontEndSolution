@if (Address.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th class="min-width">
                <h6>ID</h6>
            </th>
            <th class="min-width">
                <h6>Address</h6>
            </th>
            <th class="min-width">
                <h6>City</h6>
            </th>
            <th class="min-width">
                <h6>Postal Code</h6>
            </th>
            <th class="min-width">
                <h6>Spatial Location</h6>
            </th>
            <th>
                <h6>Action</h6>
            </th>
        </tr>
        <!-- end table row-->
        </thead>
        <tbody>
        @foreach (var address in Address)
        {
            <tr>
                <td>
                    <div class="lead mr-10">
                            <p>@address.AddrId </p>
                    </div>
                </td>
                <td>
                    <p>@address.AddrLine1</p>
                    <p style="word-wrap: break-word ">@address.AddrLine2</p>
                </td>
                <td>
                    <p>@address.AddrCity</p>
                </td>
                <td>
                    <p>@address.AddrPostalCode</p>
                </td>
                <td>
                    <p>@address.AddrSpatialLocation</p>
                </td>

                <td>
                    <button class="more-btn ml-10 dropdown-toggle" id="moreAction" title="More" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="mdi mdi-dots-vertical"></span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="moreAction" >
                        <li class="dropdown-item">
                            <a class="text-gray" @onclick="() => RedirectToUpdate(address.AddrId)">Edit</a>
                        </li>
                        <li class="dropdown-item">
                            <a class="text-danger" @onclick="() => Delete(address.AddrId)">Delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        }
        </tbody>
    </table>
}