<!-- ========== header start ========== -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-5 col-md-5 col-6">
                <div class="header-left d-flex align-items-center">
                    <div class="menu-toggle-btn mr-20">
                        <button id="menu-toggle" class="main-btn primary-btn btn-hover" @onclick="ToggleSidebar">
                            <i class="lni me-2 @(IsOpen ? "lni-menu" : "lni-chevron-left")"></i> Menu
                        </button>
                    </div>
                </div>
            </div>
            <div class="col header-right">
                <!-- profile start -->
                <div class="profile-box ml-15">
                    <button class="dropdown-toggle bg-transparent border-0"
                            type="button"
                            id="profile"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                        <div class="profile-info">
                            <div class="info">
                                <h6>John Doe</h6>
                                <div class="image">
                                    <img src="vendor/assets/images/profile/profile-image.png"
                                         alt="" />
                                    <span class="status"></span>
                                </div>
                            </div>
                        </div>
                        <i class="lni lni-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end"
                        aria-labelledby="profile">
                        <li>
                            <a href="#0">
                                <i class="lni lni-user"></i> View Profile
                            </a>
                        </li>
                        <li>
                            <a href="#0">
                                <i class="lni lni-alarm"></i> Notifications
                            </a>
                        </li>
                        <li>
                            <a href="#0"> <i class="lni lni-inbox"></i> Messages </a>
                        </li>
                        <li>
                            <a href="#0"> <i class="lni lni-cog"></i> Settings </a>
                        </li>
                        <li>
                            <a href="#0"> <i class="lni lni-exit"></i> Sign Out </a>
                        </li>
                    </ul>
                </div>
                <!-- profile end -->
            </div>
        </div>
    </div>
</header>
<!-- ========== header end ========== -->
@code {

    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public EventCallback<bool> OnToggleSidebar { get; set; }

    private async Task ToggleSidebar()
    {
        IsOpen = !IsOpen;
        await OnToggleSidebar.InvokeAsync(IsOpen);
    }

}