@page "/purchasing/vendor"

<PageTitle>Vendor</PageTitle>

<section class="table-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Vendor</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/purchasing">Purchasing</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Vendor
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <form class="row">
                            <div class="search col-4">
                                <div class="input-style-3 rounded-5">
                                    <input type="text" placeholder="Vendor Name">
                                    <button class="btn icon"><i class="lni lni-search-alt"></i></button>
                                </div>
                            </div>
                            <div class="select-style-1 col-3 rounded-sm">
                                <div class="select-position">
                                    <select>
                                        <option value="1" selected>1=High</option>
                                        <option value="0">0=Lowest</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col">
                                <a href="#0" class="main-btn dark-btn rounded-md btn-hover">Search</a>
                            </div>
                        </form>
                        <div class="table-wrapper table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><h6>#</h6></th>
                                        <th><h6>Vendor Name</h6></th>
                                        <th><h6>Status</h6></th>
                                        <th><h6>Priority</h6></th>
                                        <th><h6>Register At</h6></th>
                                        <th><h6>Web URL</h6></th>
                                        <th class="min-width">
                                            <h6 class="text-sm text-medium">
                                                <a href="#"> Add +</a>
                                            </h6>
                                        </th>
                                    </tr>
                                    <!-- end table row-->
                                </thead>
                                <tbody>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <tr>
                                        <td class="min-width">
                                            <p>@i</p>
                                        </td>
                                        <td class="min-width">
                                            <p>PT Maju Bersama Sejahtera @i</p>
                                        </td>
                                        <td class="min-width">
                                            <p>Active</p>
                                        </td>
                                        <td class="min-width">
                                            <p>Priority</p>
                                        </td>
                                        <td class="min-width">
                                            <p>20 Jan 2013</p>
                                        </td>
                                        <td class="min-width">
                                            <p>wwww.majubersama.co</p>
                                        </td>
                                        <td>
                                            <div class="dropdown me-1">
                                                <i class="btn lni lni-more-alt dropdown-toggle" data-bs-toggle="dropdown"></i>
                                                <ul class="dropdown-menu">
                                                    <li><button class="dropdown-item btn btn-sm" data-bs-toggle="modal" data-bs-target="#edit">Edit</button></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><button class="dropdown-item btn btn-sm" data-bs-toggle="modal" data-bs-target="#detail">Add Item Product</button></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><a class="dropdown-item btn btn-sm text-danger" href="#">Delete</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                            <!-- end table -->
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== tables-wrapper end ========== -->
    </div>
    <!-- end container -->
</section>

