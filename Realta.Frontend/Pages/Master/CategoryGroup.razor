@page "/categorygroup"

@using Realta.Frontend.Components.Master

<PageTitle>Category Group</PageTitle>

<section class="table-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Category Group</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/master">Master</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Category Group
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col">
                    <div class="card-style mb-30">
                        <h6 class="mb-10">Category Group</h6>
                        <div class="d-flex flex-wrap justify-content-between align-items-center py-3">
                            <div class="left">
                                <p>Show <span>@TotalRows</span> entries</p>
                            </div>
                            <div class="right">

                                <div class="table-search d-flex  row-cols-auto">
                                    <div>
                                        <button type="button" class="btn btn-primary mr-10" title="Add" data-bs-toggle="modal" data-bs-target="#addmodal">
                                            +
                                        </button>
                                    </div>

                                    <form action="#">
                                        <Search OnSearchChanged="SearchChange"/>
                                        <button>
                                            <i class="lni lni-search-alt"></i>
                                        </button>
                                    </form>

                                </div>
                            </div>
                        </div>
                        <div class="table-wrapper table-responsive">
                            <CategoryGroupTable CategoryGroups="CategoryGroupList" OnDeleted="deleteCategoryGroup"/>
                            <!-- end table -->
                        </div>
                        <Paging MetaData="MetaData" Spread="3" SelectedPage="SelectedPage"/>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
    </div>
    <!-- end container -->
</section>

    <!-- Modal Add Category Group -->
    <div class="modal fade" id="addmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addmodal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Add Category Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                <EditForm Model="_categoryGroupCreateDto" OnValidSubmit="Create">
                    <DataAnnotationsValidator/>
                        <div>
                            <div class="mb-3 row">
                                <label for="recipient-name" class="col-sm-2 col-form-label">Group Name:</label>
                                <div class="col-sm-10">
                                <InputText id="PriceitemsName" @bind-Value="_categoryGroupCreateDto.CagroName"/>
                                <ValidationMessage For="@(() => _categoryGroupCreateDto.CagroName)"/>
                                </div>
                            </div>

                            <div class="select-style-2  mb-3 row">
                                <label class="col-sm-2 col-form-label">Type</label>
                                <div class="select-position col-sm-10">
                                <InputSelect @bind-Value="_categoryGroupCreateDto.CagroType" class="form-control">
                                    <ValidationMessage For="@(() => _categoryGroupCreateDto.CagroType)"/>                                        <option value="">Select category</option>
                                        <option value="">Category</option>
                                        <option value="">Service</option>
                                        <option value="">Facility</option>
                                    </InputSelect>
                                </div>
                            </div>


                            <div class="row">
                                <label for="policyrules" class="col-sm-2 col-form-label">Policy Rules:</label>
                                <div class="input-style-2 col-sm-10 ">
                                    <InputText type="text" placeholder="Search" @bind-Value="_categoryGroupCreateDto.PoliId"/>
                                    <span class="icon">
                                        <i class="lni lni-search-alt"></i>
                                    </span>
                                    
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="message-text" class="col-form-label">Description:</label>
                            <InputTextArea class="form-control" id="PriceitemsName" @bind-Value="_categoryGroupCreateDto.CagroDescription"/>
                            <ValidationMessage For="@(() => _categoryGroupCreateDto.CagroDescription)"/>                            </div>
                            <div class="mb-3">
                                <label for="formFileSm" class="form-label">Upload Icon</label>
                            <InputFile class="form-control form-control-sm" type="file" id="PriceitemsName" @bind-Value="_categoryGroupCreateDto.CagroIconUrl"/>
                            </div>
                        </div>
                    </EditForm>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Edit Category Group -->
    <div class="modal fade" id="editmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editmodal" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Edit Category Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="_categoryGroupCreateDto" OnValidSubmit="Create">
                        <DataAnnotationsValidator/>
                        <div>
                            <div class="mb-3 row">
                                <label for="recipient-name" class="col-sm-2 col-form-label">Group Name:</label>
                                <div class="col-sm-10">
                                    <InputText id="PriceitemsName" @bind-Value="_categoryGroupCreateDto.CagroName"/>
                                    <ValidationMessage For="@(() => _categoryGroupCreateDto.CagroName)"/>
                                </div>
                            </div>

                            <div class="select-style-2  mb-3 row">
                                <label class="col-sm-2 col-form-label">Type</label>
                                <div class="select-position col-sm-10">
                                    <InputSelect @bind-Value="_categoryGroupCreateDto.CagroType" class="form-control">
                                        <option value="">Select category</option>
                                        <option value="">Category</option>
                                        <option value="">Service</option>
                                        <option value="">Facility</option>
                                    </InputSelect>
                                </div>
                            </div>


                            <div class="row">
                                <label for="policyrules" class="col-sm-2 col-form-label">Policy Rules:</label>
                                <div class="input-style-2 col-sm-10 ">
                                    <input type="text" placeholder="Search">
                                    <span class="icon">
                                        <i class="lni lni-search-alt"></i>
                                    </span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="message-text" class="col-form-label">Description:</label>
                                <InputTextArea id="PriceitemsName" @bind-Value="_categoryGroupCreateDto.CagroDescription" />
                                <ValidationMessage For="@(() => _categoryGroupCreateDto.CagroDescription)"/>

                            </div>
                            <div class="mb-3">
                                <label for="formFileSm" class="form-label">Upload Icon</label>
                            <InputFile class="form-control form-control-sm" type="file" id="cagroitemname" @bind-Value="_categoryGroupCreateDto.CagroIconUrl" />
                            </div>
                        </div>
                    </EditForm>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>




@code {
    public int TotalRows { get; set; } = 5;

    [Parameter]
    public string CagroDesc { get; set; }

}