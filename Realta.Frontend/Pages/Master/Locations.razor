@page "/locations"
@using Realta.Frontend.Components.Master
@using Realta.Domain.RequestFeatures
@using Realta.Contract.Models
@inject NavigationManager NavigationManager

<PageTitle>Locations</PageTitle>

<section class="table-components">
<div class="container-fluid">
    <!-- ========== title-wrapper start ========== -->
    <div class="title-wrapper pt-30">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="title mb-30">
                    <h2>Locations</h2>

                </div>
            </div>
            <!-- end col -->
            <div class="col-md-6">
                <div class="breadcrumb-wrapper mb-30">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/locations">locations</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">
                                locations
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- ========== title-wrapper end ========== -->
    <!-- ========== tables-wrapper start ========== -->
    <div class="tables-wrapper">
        <div class="row">
            <div class="col ">
                <div class="card-style mb-30">
                    <div class="title d-flex flex-wrap align-items-left justify-content-center">
                        <h3 class="mb-10">Regions</h3>
                        <div class="d-flex align-items-center">
                        </div>
                    </div>
                    <div class="d-flex flex-wrap justify-content-center align-items-center py-3">

                        <div class="right">

                            <div class="table-search d-flex  row-cols-auto">
                                <div>
                                    <button type="button" class="btn btn-primary mr-10" title="Add" data-bs-toggle="modal" data-bs-target="#addregions">
                                        +
                                    </button>
                                </div>

                                <form action="#">
                                    <Search OnSearchChanged="SearchChangeR"/>
                                    <button>
                                        <i class="lni lni-search-alt"></i>
                                    </button>
                                </form>

                            </div>
                        </div>
                    </div>
                    <div class="table-wrapper table-responsive">
                        <RegionsTable Regions="RegionsList" OnDeleted="deleteRegions" OnSelectedRegion="SelectedRegion"/>
                        <!-- end table -->
                    </div>
                    <div class="pt-10 d-flex flex-wrap justify-content-center">
                        <Pagination MetaData="MetaDataR" Spread="3" SelectedPage="SelectedPageRegions"/>

                    </div>
                </div>
                <!-- end card -->
            </div> <!--Regions-->
            <div class="col">
                <div class="card-style mb-30">
                    <div class="title d-flex flex-wrap align-items-left justify-content-center">
                        <h3 class="mb-10">Country</h3>
                        <div class="d-flex align-items-center">
                        </div>
                    </div>
                    <div class="d-flex flex-wrap justify-content-center align-items-center py-3">

                        <div class="right">

                            <div class="table-search d-flex  row-cols-auto">
                                <div>
                                    <button type="button" class="btn btn-primary mr-10" title="Add" data-bs-toggle="modal" data-bs-target="#addcountry">
                                        +
                                    </button>
                                </div>

                                <form action="#">
                                    <Search OnSearchChanged="SearchChangeC"/>
                                    <button>
                                        <i class="lni lni-search-alt"></i>
                                    </button>
                                </form>

                            </div>
                        </div>
                    </div>
                    <div class="table-wrapper table-responsive">
                        <CountryTable Country="CountryList" OnSelectedCountry="SelectedCountry" OnDeleted="deleteCountry"/>
                        <!-- end table -->
                    </div>
                    <div class="pt-10 d-flex flex-wrap justify-content-center">
                        <Pagination MetaData="MetaDataC" Spread="3" SelectedPage="SelectedPageCountry"/>

                    </div>
                </div>
                <!-- end card -->
            </div> <!--Country-->
            <div class="col">
                <div class="card-style mb-30 ">
                    <div class="title d-flex flex-wrap align-items-left justify-content-center">
                        <h3 class="mb-10">Provinces</h3>
                        <div class="d-flex align-items-center">
                        </div>
                    </div>
                    <div class="d-flex flex-wrap justify-content-center align-items-center py-3">

                        <div class="right">

                            <div class="table-search d-flex  row-cols-auto">
                                <div>
                                    <button type="button" class="btn btn-primary mr-10" title="Add" data-bs-toggle="modal" data-bs-target="#addprovinces">
                                        +
                                    </button>
                                </div>

                                <form action="#">
                                    <Search OnSearchChanged="SearchChangeP"/>
                                    <button>
                                        <i class="lni lni-search-alt"></i>
                                    </button>
                                </form>

                            </div>
                        </div>
                    </div>
                    <div class="table-wrapper table-responsive">
                        <ProvincesTable Provinces="ProvincesList" OnSelectedProvinces="SelectedProvinces" OnDeleted="deleteProvinces"/>
                        <!-- end table -->
                    </div>
                    <div class="pt-10 d-flex flex-wrap justify-content-center">
                        <Pagination MetaData="MetaDataP" Spread="3" SelectedPage="SelectedPageProvinces"/>

                    </div>
                </div>
                <!-- end card -->
            </div> <!-- Provinces-->

        </div>
    </div>
    <div class="tables-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-style mb-30">
                    <div class="title d-flex flex-wrap align-items-left justify-content-center mt-3">
                        <h3 class="mb-10">Address</h3>
                        <div class="d-flex align-items-center">
                        </div>
                    </div>
                    <div class="d-flex flex-wrap justify-content-between align-items-center py-3">
                        <div class="left">
                            <p>Show <span>@TotalRows</span> entries</p>
                        </div>
                        <div class="right">

                            <div class="table-search d-flex  row-cols-auto">
                                <div>
                                    <button type="button" class="btn btn-primary mr-10" title="Add" data-bs-toggle="modal" data-bs-target="#addaddress">
                                        +
                                    </button>
                                </div>

                                <form action="#">
                                    <Search OnSearchChanged="SearchChangeA"/>
                                    <button>
                                        <i class="lni lni-search-alt"></i>
                                    </button>
                                </form>

                            </div>
                        </div>
                    </div>
                    <div class="table-wrapper table-responsive">
                        <AddressTable Address="AddressList" OnDeleted="deleteAddress"/>
                        <!-- end table -->
                    </div>
                    <div class="pt-10 d-flex flex-wrap justify-content-between">
                        <Paging MetaData="MetaDataA" Spread="3" SelectedPage="SelectedPageAddress"/>
                    </div>
                </div>
                <!-- end card -->
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->

    </div><!--Address-->
</div>
<!-- end container -->
</section>


<!-- Modal Add regions -->
<div class="modal fade" id="addregions" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addRegionsLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Regions</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="_regionsCreateDto" OnValidSubmit="CreateRegions">
                    <DataAnnotationsValidator/>
                    <div class="card-style mb-30">
                        <div class="mb-3 row input-style-1">
                            <label for="recipient-name" class="col-sm-2 col-form-label">Regions Name:</label>
                            <div class="col-sm-10">
                                <InputText id="ProductName" @bind-Value="_regionsCreateDto.RegionName"/>
                                <ValidationMessage For="@(() => _regionsCreateDto.RegionName)"/>
                            </div>
                        </div>
                        <div class="col-12 modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
<SuccessNotification @ref="_notification"/>

<!-- Modal Add country -->
<div class="modal fade" id="addcountry" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCountryLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Country</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="_countryCreateDto" OnValidSubmit="CreateCountry">
                    <DataAnnotationsValidator/>
                    <div class="card-style mb-30">
                        <div class=" row">
                            <label for="recipient-name" class="col-sm-2 col-form-label">Regions Name:</label>
                            <div class="col-sm-10 input-style-2">
                                <input type="text" disabled="true" value="@_selectedRegionName"/>
                                <InputNumber class="d-none" @bind-Value="_countryCreateDto.CountryRegionId"/>
                            </div>
                        </div>

                        <div class="mb-3 row input-style-2">
                            <label for="recipient-name" class="col-sm-2 col-form-label">Country Name:</label>
                            <div class="col-sm-10">
                                <InputText id="Name" @bind-Value="_countryCreateDto.CountryName"/>
                                <ValidationMessage For="@(() => _countryCreateDto.CountryName)"/>
                            </div>
                        </div>
                        <div class="col-12 modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
<SuccessNotification @ref="_notification"/>


<!-- Modal Add provinces -->
<div class="modal fade" id="addprovinces" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addProvincesLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Provinces</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="_provincesCreateDto" OnValidSubmit="CreateProvinces">
                    <DataAnnotationsValidator/>
                    <div class="card-style mb-30">
                        <div class="mb-3 row">
                            <label for="recipient-name" class="col-sm-2 col-form-label">Country Name:</label>
                            <div class="col-sm-10 input-style-2">
                                <input type="text" disabled="true" value="@_selectedCountryName"/>
                                <InputNumber class="d-none" @bind-Value="_provincesCreateDto.ProvCountryId"/>
                            </div>
                        </div>


                        <div class="mb-3 row input-style-1">
                            <label for="addprovinces" class="col-sm-2 col-form-label">Provinces Name:</label>
                            <div class="col-sm-10">
                                <InputText id="ProductName" @bind-Value="_provincesCreateDto.ProvName"/>
                                <ValidationMessage For="@(() => _provincesCreateDto.ProvName)"/>
                            </div>
                        </div>
                        <div class="col-12 modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save</button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
<SuccessNotification @ref="_notification"/>


<!-- Modal Add address -->
<div class="modal fade" id="addaddress" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addaddressLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="_addressCreateDto" OnValidSubmit="CreateAddress">
                    <DataAnnotationsValidator/>
                    <div class="card-style mb-30">
                        <div class="mb-3 row ">
                            <label for="recipient-name" class="col-sm-2 col-form-label">Provinces Name:</label>
                            <div class="col-sm-10 input-style-2">
                            <input type="text" disabled="true" value="@_selectedProvincesName"/>
                            </div>
                            </div>


                        <div class="mb-3 row input-style-1">
                            <label for="addaddress" class="col-sm-2 col-form-label">Address Line 1:</label>
                            <div class="col-sm-10 input-style-1">
                                <InputText id="ProductName" @bind-Value="_addressCreateDto.AddrLine1"/>
                                <ValidationMessage For="@(() => _addressCreateDto.AddrLine1)"/>
                            </div>
                        </div>

                        <div class="mb-3 row input-style-1">
                            <label for="addaddress" class="col-sm-2 col-form-label">Address Line 2:</label>
                            <div class="col-sm-10">
                                <InputText id="ProductName" @bind-Value="_addressCreateDto.AddrLine2"/>
                            </div>
                        </div>

                        <div class="mb-3 row input-style-1">
                            <label for="addaddress" class="col-sm-2 col-form-label">City:</label>
                            <div class="col-sm-10">
                                <InputText id="ProductName" @bind-Value="_addressCreateDto.AddrCity"/>
                                <ValidationMessage For="@(() => _addressCreateDto.AddrCity)"/>
                            </div>
                        </div>

                        <div class="mb-3 row input-style-1">
                            <label for="addaddress" class="col-sm-2 col-form-label">Postal Code:</label>
                            <div class="col-sm-10">
                                <InputText id="ProductName" @bind-Value="_addressCreateDto.AddrPostalCode"/>
                                <ValidationMessage For="@(() => _addressCreateDto.AddrPostalCode)"/>
                            </div>
                        </div>

                        <div class="mb-3 row input-style-1">
                            <label for="addaddress" class="col-sm-2 col-form-label">Spatial Location:</label>
                            <div class="col-sm-10">
                                <InputText id="ProductName" @bind-Value="_addressCreateDto.AddrSpatialLocation"/>
                                <ValidationMessage For="@(() => _addressCreateDto.AddrSpatialLocation)"/>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save</button>
                        </div>
                    </div>
                </EditForm>
            </div>

        </div>
    </div>
</div>
<SuccessNotification @ref="_notification"/>

@code {
    public int TotalRows { get; set; } = 5;
}