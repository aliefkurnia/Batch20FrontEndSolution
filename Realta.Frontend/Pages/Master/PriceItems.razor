@page "/priceitems"
@using Realta.Frontend.Components.Master
@inherits LayoutComponentBase

<PageTitle>Price Items</PageTitle>

<section class="table-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Price Items</h2>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/master">Master</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Price Items
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <h6 class="mb-10 col ">Price Items</h6>
                        <div class="row d-flex justify-content-end">
                            <div class=" select-style-2  col-2 ">
                                <div class="select-position">
                                    <SortPriceItems SortChanged="Sort"/>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-wrap justify-content-between align-items-center">

                            <div class="left">
                                <p>Show <span>@TotalRows</span> entries</p>
                            </div>

                            <div class="right">

                                <div class="table-search d-flex  row-cols-auto">
                                    <div>
                                        <button type="button" class="btn btn-primary mr-10" title="Add" data-bs-toggle="modal" data-bs-target="#addmodal">
                                            +
                                        </button>
                                    </div>

                                    <form action="#">
                                        <Search OnSearchChanged="SearchChange"/>
                                        <button>
                                            <i class="lni lni-search-alt"></i>
                                        </button>
                                    </form>

                                </div>
                            </div>
                        </div>
                        <div class="table-wrapper table-responsive">
                            <PriceItemsTable priceItems="PriceItemsList" OnDeleted="deletePriceItems"/>
                            <!-- end table -->
                        </div>
                        <Paging MetaData="MetaData" Spread="3" SelectedPage="SelectedPage"/>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== tables-wrapper end ========== -->
    </div>
    <!-- end container -->
</section>


@* // Update Modal *@
<div class="warning-modal">
    <div class="modal fade" id="@($"UpdateModal")" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Edit Price Item</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>

                        <div>
                            <div class="mb-3 row">
                                <label for="recipient-name" class="col-sm-2 col-form-label">Item Name:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Item-price">
                                </div>
                            </div>

                            <div class="select-style-2   row">
                                <label class="col-sm-2 col-form-label">Type</label>
                                <div class="select-position col-sm-10">
                                    <select>
                                        <option value="">Select category</option>
                                        <option value="">Category</option>
                                        <option value="">Service</option>
                                        <option value="">Facility</option>
                                    </select>
                                </div>
                            </div>


                            <div class="mb-3 row">
                                <label for="recipient-name" class="col-sm-2 col-form-label">Item Price:</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Item-price">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="message-text" class="col-form-label">Description:</label>
                                <textarea class="form-control" id="Description"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="formFileSm" class="form-label">Upload Icon</label>
                                <input class="form-control form-control-sm" id="formFileSm" type="file">
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>


@*add modal*@
<div class="modal fade" id="addmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCagroLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Add Price Items</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="_priceItemsCreateDto" OnValidSubmit="Create">
                    <DataAnnotationsValidator/>
                    <div>
                        <div class="row input-style-1">
                            <label for="recipient-name" class="col-sm-2 col-form-label">Item Name:</label>
                            <div class="col-sm-10">
                                <InputText id="PriceitemsName" @bind-Value="_priceItemsCreateDto.PritName"/>
                                <ValidationMessage For="@(() => _priceItemsCreateDto.PritName)"/>
                            </div>
                        </div>

                        <div class="select-style-1 row">
                            <label class="col-sm-2 col-form-label">Type</label>
                            <div class="select-position col-sm-10">
                                <InputSelect @bind-Value="_priceItemsCreateDto.PritType" class="form-control">
                                    <ValidationMessage For="@(() => _priceItemsCreateDto.PritType)"/>
                                    <option disabled="">Select category</option>
                                    <option value="">Category</option>
                                    <option value="">Service</option>
                                    <option value="">Facility</option>
                                </InputSelect>
                            </div>
                        </div>

                        <div class="input-style-1 row">
                            <label class="col-sm-2" for="price">Item Price:</label>
                            <div class="col-md-10">
                                <InputNumber id="Item-price" @bind-Value="_priceItemsCreateDto.PritPrice"/>
                                <ValidationMessage For="@(() => _priceItemsCreateDto.PritPrice)"/>
                            </div>
                        </div>

                        <div class=" select-style-1">
                            <label for="message-text" class="col-form-label">Description:</label>
                            <InputTextArea class="form-control" id="PriceitemsName" @bind-Value="_priceItemsCreateDto.PritDescription"/>
                            <ValidationMessage For="@(() => _priceItemsCreateDto.PritDescription)"/>
                        </div>


                        <div class="mb-3">
                            <InputFile class="form-control form-control-sm" type="file" id="PriceitemsName" @bind-Value="_priceItemsCreateDto.PritIconUrl"/>
                        </div>

                        <div class="col-12 modal-footer">
                            <button class="main-btn primary-btn btn-hover" data-bs-dismiss="modal">
                                Submit
                            </button>
                        </div>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>
<SuccessNotification @ref="_notification"/>


@code {
    public int TotalRows { get; set; } = 5;
}